<resources>
    <!-- Base application theme. -->
    <style name="JymTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryNet</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNet</item>
        <item name="colorAccent">@color/colorAccentNet</item>
    </style>

    <style name="PickerTheme" parent="JymTheme">
        <item name="colorControlNormal">@color/colorText</item>
    </style>
    <style name="JymTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarItemBackground">@color/colorAccentNet</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextViewTextPast">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPastSet</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="TextViewLabelTopCard">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextTab</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextViewLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#6c6c70</item>
        <item name="android:typeface">monospace</item>

        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RecyclerView">
        <item name="android:background">@color/colorBackgroundRecyclerView</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>>
    </style>

    <style name="MyCardView" parent="Base.CardView">
        <item name="cardBackgroundColor">@color/colorBackgroundCardView</item>
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="MyCardViewTop">
        <item name="cardBackgroundColor">@color/colorBackgroundTabLayout</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="MyCardViewTopForNowTime">
        <item name="cardBackgroundColor">@color/colorBackgroundTabLayout</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="MyTabLayout">
        <item name="android:background">@color/colorBackgroundTabLayout</item>
        <item name="android:textColor">@color/colorTextTab</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>>
    </style>
    <style name="MyConstrateLayout">
        <item name="android:background">@color/colorBackgroundConstrateLayout</item>

    </style>
    <!-- Splash theme. -->

    <!--  <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
          <item name="android:windowBackground">@drawable/splash_activity</item>
          style name="AppTheme.NoActionBar">

      </style>-->
    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="actionMenuTextColor">#ff63BBF7</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextTab</item>
        <item name="android:singleLine">false</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="ExtenddAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextTab</item>
        <item name="android:textStyle">normal</item>

    </style>

    <!--   <style name="ToolBarStyle" parent="Theme.AppCompat">
           <item name="android:textColorPrimary">@android:color/white</item>
           <item name="android:textColorSecondary">@android:color/white</item>
           <item name="actionMenuTextColor">@android:color/white</item>
           <item name="actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>
           <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
       </style>-->

</resources>